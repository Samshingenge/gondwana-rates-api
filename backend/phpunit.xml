<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.5/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         cacheResultFile=".phpunit.result.cache"
         executionOrder="depends,defects"
         forceCoversAnnotation="false"
         beStrictAboutCoversAnnotation="false"
         beStrictAboutOutputDuringTests="true"
         beStrictAboutTodoAnnotatedTests="true"
         convertDeprecationsToExceptions="true"
         failOnRisky="true"
         failOnWarning="true"
         verbose="true"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         testdox="true">

    <!-- Test Suites Configuration -->
    <testsuites>
        <testsuite name="Unit Tests">
            <directory suffix="Test.php">tests/</directory>
        </testsuite>
        <testsuite name="Feature Tests">
            <directory suffix="Test.php">tests/Feature/</directory>
        </testsuite>
        <testsuite name="Integration Tests">
            <directory suffix="Test.php">tests/Integration/</directory>
        </testsuite>
    </testsuites>

    <!-- Code Coverage Configuration -->
    <coverage cacheDirectory=".phpunit.cache/code-coverage"
              processUncoveredFiles="true"
              ignoreDeprecatedCodeUnitsFromCodeCoverage="true"
              includeUncoveredFiles="true">
        
        <!-- Include these files in coverage -->
        <include>
            <directory suffix=".php">src/</directory>
            <directory suffix=".php">public/</directory>
        </include>
        
        <!-- Exclude these from coverage -->
        <exclude>
            <directory>vendor/</directory>
            <directory>tests/</directory>
            <directory>logs/</directory>
            <directory>cache/</directory>
            <directory>temp/</directory>
            <file>src/config.php</file>
        </exclude>
        
        <!-- Coverage Reports -->
        <report>
            <html outputDirectory="coverage/html" lowUpperBound="35" highLowerBound="70"/>
            <clover outputFile="coverage/clover.xml"/>
            <cobertura outputFile="coverage/cobertura.xml"/>
            <crap4j outputFile="coverage/crap4j.xml" threshold="50"/>
            <php outputFile="coverage/coverage.php"/>
            <text outputFile="coverage/coverage.txt" showUncoveredFiles="false" showOnlySummary="true"/>
            <xml outputDirectory="coverage/xml"/>
        </report>
    </coverage>

    <!-- Logging Configuration -->
    <logging>
        <testdoxHtml outputFile="tests/_output/testdox.html"/>
        <testdoxText outputFile="tests/_output/testdox.txt"/>
        <junit outputFile="tests/_output/junit.xml"/>
    </logging>

    <!-- PHP Configuration -->
    <php>
        <!-- Environment Variables -->
        <env name="APP_ENV" value="testing"/>
        <env name="LOG_LEVEL" value="DEBUG"/>
        
        <!-- Server Variables -->
        <server name="HTTP_HOST" value="localhost"/>
        <server name="REQUEST_METHOD" value="GET"/>
        <server name="REQUEST_URI" value="/"/>
        <server name="SERVER_NAME" value="localhost"/>
        <server name="SERVER_PORT" value="8000"/>
        <server name="HTTPS" value="false"/>
        
        <!-- PHP Settings -->
        <ini name="error_reporting" value="E_ALL"/>
        <ini name="display_errors" value="1"/>
        <ini name="display_startup_errors" value="1"/>
        <ini name="log_errors" value="1"/>
        <ini name="memory_limit" value="512M"/>
        <ini name="max_execution_time" value="0"/>
        
        <!-- Constants -->
        <const name="PHPUNIT_TESTSUITE" value="true"/>
    </php>

    <!-- Extensions -->
    <extensions>
        <!-- Uncomment if you have these extensions installed -->
        <!--
        <extension class="DAMA\DoctrineTestBundle\PHPUnit\PHPUnitExtension"/>
        <extension class="Symfony\Component\Panther\ServerExtension"/>
        -->
    </extensions>

    <!-- Listeners (for older PHPUnit versions) -->
    <!--
    <listeners>
        <listener class="MyProject\MyListener" file="tests/MyListener.php">
            <arguments>
                <string>sebastian</string>
            </arguments>
        </listener>
    </listeners>
    -->

    <!-- Groups -->
    <groups>
        <exclude>
            <group>slow</group>
            <group>network</group>
            <group>integration</group>
        </exclude>
    </groups>

    <!-- Test Results Cache -->
    <cache>
        <directory>.phpunit.cache</directory>
    </cache>

    <!-- Bootstrap Files -->
    <!--
    <bootstrap>vendor/autoload.php</bootstrap>
    -->

</phpunit>